# Environment variables
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"

export EDITOR=helix
alias hx='helix'

export LESSHISTFILE="$XDG_STATE_HOME/less/history"
export _JAVA_OPTIONS="-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java"

export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# zsh history configuration
HISTFILE="$XDG_STATE_HOME/zsh/history"
HISTSIZE=10000000
SAVEHIST=10000000

# Change to store stuff in .config
export ZDOTENV="$XDG_CONFIG_HOME/zsh"

# XDG compliance
export BUNDLE_USER_CACHE="$XDG_CACHE_HOME"/bundle                         
export BUNDLE_USER_CONFIG="$XDG_CONFIG_HOME"/bundle                       
export BUNDLE_USER_PLUGIN="$XDG_DATA_HOME"/bundle
export CARGO_HOME="$XDG_DATA_HOME"/cargo
export GOPATH="$XDG_DATA_HOME"/go
export NODE_REPL_HISTORY="$XDG_STATE_HOME"/node_repl_history
export NPM_CONFIG_CACHE="$XDG_CACHE_HOME"/npm                             
export NPM_CONFIG_INIT_MODULE="$XDG_CONFIG_HOME"/npm/config/npm-init.js   
export NPM_CONFIG_TMP="$XDG_RUNTIME_DIR"/npm 
export PSQL_HISTORY="$XDG_STATE_HOME/psql_history"
export PYTHON_HISTORY="$XDG_STATE_HOME/python_history"
export RUSTUP_HOME="$XDG_DATA_HOME/rustup"
export TEXMFVAR="$XDG_CACHE_HOME"/texlive/texmf-var


alias wget="wget --hsts-file=$XDG_DATA_HOME/wget-hsts"


zstyle ':completion:*' completer _complete _ignored _approximate
zstyle ':completion:*' matcher-list 'm:{[:lower:]}={[:upper:]}' 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}'
zstyle :compinstall filename '/home/erre/.zshrc'

autoload -Uz compinit
compinit -d "$XDG_CACHE_HOME"/zsh/zcompdump-"$ZSH_VERSION"

setopt autocd extendedglob notify
unsetopt beep nomatch
bindkey -e

# Aliases
alias ls="exa --icons"
alias vim="nvim"
alias docker="podman"
alias lock="swaylock"
alias cd="z"
alias p="python3"
alias n="nnn"
alias nn="nnn"
alias nnnn="nnn"
alias ugc="flatpak run io.github.ungoogled_software.ungoogled_chromium --ozone-platform-hint=auto"

# Functions
mkcd() {
    mkdir "$1"
    cd "$1"
}

# Init direnv
eval "$(direnv hook zsh)"

# Initialize zoxide
eval "$(zoxide init zsh)"

PROMPT="%B[%F{green}%n@%m%f:%F{blue}%~%f]$%b "


